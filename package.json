{
  "name": "share-box",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:micaiah-effiong/File-share.git",
  "author": "Micah Effiong <micaiah.effiong@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "client:dev": "yarn workspace client dev",
    "server:dev": "yarn workspace server dev",
    "server:start": "yarn workspace server start",
    "start": "yarn workspace server start",
    "story": "yarn workspace client storybook",
    "build-story": "yarn workspace client build-storybook",
    "build": "yarn workspace client build && yarn workspace server build",
    "postbuild": "copyfiles -u 2 client/dist/** client/dist/**/* server/dist/public",
    "prepare": "husky install",
    "prettier-format": "prettier --write ."
  },
  "private": true,
  "engines": {
    "node": ">=16.x.x",
    "yarn": ">=1.x.x",
    "npm": ">=8.x.x"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "yarn-audit-fix": "^9.3.1"
  }
}
