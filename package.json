{
  "name": "share-box",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:micaiah-effiong/File-share.git",
  "author": "Micah Effiong <micaiah.effiong@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "client:dev": "yarn workspace client dev",
    "server:dev": "yarn workspace server dev",
